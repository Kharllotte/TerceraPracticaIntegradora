<link rel="stylesheet" href="/css/cart.css" />
<link rel="stylesheet" href="/css/table.css" />

<div id="popup" class="popup">
  <div class="popup-content">
    <h2>Carrito de compras</h2>
    {{>loader}}
    <div id="before" class="before">
      <table>
        <thead>
          <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody id="cart-items">

        </tbody>
      </table>
      <p class="end">Total: <strong id="cart-total">$0</strong></p>
      <div class="d-flex justify-content-end">
        <button id="purchase-button" class="d-none">Ir a pagar</button>
      </div>
      <button id="close-button">&times;</button>
    </div>
    <div id="after" class="after d-none">
      <div class="bill d-none" id="bill">
        <h3 class="m-0">Factura</h3>
        <div class="factura">
          <div><b>Codigo:</b>
            <span id="code"></span></div>
          <div><b>Total pagado:</b>
            <span id="amount"></span></div>
          <div>
            <b>Fecha:</b>
            <span id="date"></span>
          </div>
        </div>
      </div>
      <div id="productsNoFound" class="productsNoFound d-none">
        <h3>Uppss... Ocurrio algo</h3>
        <h4>Estos productos no fueron agregados:</h4>
        <table>
          <thead>
            <tr>
              <th>Producto</th>
              <th>Stock</th>
              <th>Mensaje</th>
            </tr>
          </thead>
          <tbody id="listProductsNoFound">

          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-center">
        <button class="acept-button" id="acept">Aceptar</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/cart.js"></script>